@model Model.EF.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="~/assets/admin/css/custom-toggle-button.css" rel="stylesheet" />
}
@section scripts {
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Trang chủ</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "User")">Danh mục</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
    </ol>
</nav>
<form action="/admin/category/create" method="post" class="bg-white p-3 shadow" style="border-radius: 1rem;">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Tên danh mục <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Name" placeholder="Tên danh mục">
            </div>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Meta tiêu đề</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="MetaTitle" placeholder="Meta tiêu đề">
            </div>
            @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Danh mục cha</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="ParentId" placeholder="Danh mục cha">
            </div>
            @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Thứ tự</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="DisplayOrder" placeholder="Thứ tự">
            </div>
            @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Tiêu đề SEO</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="SeoTitle" placeholder="Tiêu đề SEO">
            </div>
            @Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Từ khóa Meta</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="MetaKeywords" placeholder="Từ khóa Meta">
            </div>
            @Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Trạng thái</label> <br />
            <label class="switch">
                <input type="checkbox" name="Status" value="true">
                <span class="slider round"></span>
            </label>
            <input name="Status" type="hidden" value="false" />
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Hiển thị trang chủ</label> <br />
            <label class="switch">
                <input type="checkbox" name="ShowOnHome" value="true">
                <span class="slider round"></span>
            </label>
            <input name="ShowOnHome" type="hidden" value="false" />
            @Html.ValidationMessageFor(model => model.ShowOnHome, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 form-group text-right">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Thêm mới</button>
            <a type="button" class="btn btn-secondary" href="@Url.Action("Index", "Category")">
                <i class="fas fa-backward"></i> Quay lại
            </a>
        </div>

    </div>
</form>
