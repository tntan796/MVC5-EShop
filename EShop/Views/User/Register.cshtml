@model EShop.Models.RegisterModel
@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.SuccessMessage != null)
{
    <text>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                alert('@ViewBag.SuccessMessage');
            })
        </script>
    </text>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Trang chủ</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Đăng ký</li>
    </ol>
</nav>

<form action="/user/register" method="post" class="bg-white p-3 shadow" style="border-radius: 1rem;">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Tài khoản <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="UserName" placeholder="Tài khoản" value="@Model.UserName">
            </div>
            @if (ViewBag.ExistUserName != null)
            {
                <span class="text-danger">
                    @ViewBag.ExistUserName
                </span>
            }
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Mật khẩu <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Password" placeholder="Mật khẩu" value="@Model.Password">
            </div>
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Nhập lại mật khẩu <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="ConfirmPassword" placeholder="Nhập lại mật khẩu" value="@Model.ConfirmPassword">
            </div>
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Họ tên</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Name" placeholder="Họ tên" value="@Model.Name">
            </div>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Địa chỉ</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Address" placeholder="Địa chỉ" value="@Model.Address">
            </div>
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Email</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Email" placeholder="Email" value="@Model.Email">
            </div>
            @if (ViewBag.ExistEmail != null)
            {
                <span class="text-danger">
                    @ViewBag.ExistEmail
                </span>
            }
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Điện thoại</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Phone" placeholder="Phone" value="@Model.Phone">
            </div>
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group">
            @Html.Captcha("Refresh", null
         , 4, null, false)
            <span class="text-danger">@ViewBag.error</span>
        </div>
        <div class="col-sm-12 form-group text-right">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Thêm mới</button>
            <a type="button" class="btn btn-secondary" href="@Url.Action("Index", "User")">
                <i class="fas fa-backward"></i> Quay lại
            </a>
        </div>
    </div>
</form>
