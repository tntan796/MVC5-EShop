@model Model.EF.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/assets/admin/css/custom-toggle-button.css" rel="stylesheet" />
}

@section scripts {
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Trang chủ</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "User")">Tài khoản</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
    </ol>
</nav>

<form action="/admin/user/create" method="post" class="bg-white p-3 shadow" style="border-radius: 1rem;">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Tài khoản <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="UserName" placeholder="Tài khoản" value="@Model.UserName">
            </div>
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Mật khẩu <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-user-lock text-primary"></i>
                    </span>
                </div>
                <input type="password" class="form-control" name="Password" placeholder="Mật khẩu" value="@Model.Password">
            </div>
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Họ tên <span class="text-danger"> *</span></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-chalkboard-teacher text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Name" placeholder="Họ tên" value="@Model.Name">
            </div>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="col-sm-12 col-md-6 form-group ">
            <label>Địa chỉ</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-map-marked-alt text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Address" placeholder="Địa chỉ" value="@Model.Address">
            </div>
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Điện thoại</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-phone-alt text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" name="Phone" placeholder="Điện thoại" value="@Model.Phone">
            </div>
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Trạng thái</label> <br />
            <label class="switch">
                <input type="checkbox" name="Status" value="true" checked="@Model.Status">
                <span class="slider round"></span>
            </label>
            <input type="hidden" name="Status" value="false">
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 col-md-6 form-group ">
            <label>Từ khóa Meta</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text bg-white">
                        <i class="fas fa-keyboard text-primary"></i>
                    </span>
                </div>
                <input type="text" class="form-control" placeholder="Từ khóa Meta" name="MetaKeywords" aria-label="MetaKeywords">
            </div>
            @Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 form-group text-right">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Thêm mới</button>
            <a type="button" class="btn btn-secondary" href="@Url.Action("Index", "User")">
                <i class="fas fa-backward"></i> Quay lại
            </a>
        </div>
    </div>
</form>
